<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clean_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
      android:allowBackup="true"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:theme="@style/AppTheme">

      <activity
        android:name="com.clean_project.MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>

      <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />

      <activity android:name="com.clean_project.usbclient.SerialActivity"
          android:label="Serial"
          android:windowSoftInputMode="adjustResize|stateVisible"
          >
      </activity>


      <service
        android:name="com.clean_project.usbclient.UsbService"
        android:enabled="true">
      </service>
    </application>

</manifest>
